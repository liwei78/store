- model_class = Shippment
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:number) + ':'
  %br
  = @shippment.number

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_shippments_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_shippment_path(@shippment), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_shippment_path(@shippment), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
