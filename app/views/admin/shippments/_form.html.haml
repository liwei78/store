= form_for @shippment, url: (@shippment.new_record? ? admin_shippments_path : admin_shippment_path(@shippment)), :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :number, :class => 'control-label'
    .controls
      = f.text_field :number, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), admin_shippments_path, :class => 'btn'
