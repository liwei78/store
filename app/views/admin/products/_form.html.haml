= form_for @product, url: store_products_path(@store), :html => { :class => 'form-horizontal' } do |f|
  = f.hidden_field :store_id
  .control-group
    = f.label :title, :class => 'control-label'
    .controls
      = f.text_field :title, :class => 'text_field'
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_area :description, :class => 'text_area'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), store_products_path(@store), :class => 'btn'
