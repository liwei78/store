= form_for @store, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :title, :class => 'control-label'
    .controls
      = f.text_field :title, :class => 'text_field'
  .control-group
    = f.label :permalink, :class => 'control-label'
    .controls
      = f.text_field :permalink, :class => 'text_field'
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_area :description, :class => 'text_area input-xxlarge', rows: 4
  .control-group
    = f.label :closed, :class => 'control-label'
    .controls
      = f.check_box :closed
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), stores_path, :class => 'btn'
