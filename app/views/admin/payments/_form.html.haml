= form_for @payment, url: (@payment.new_record? ? admin_payments_path : admin_payment_path(@payment)), :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :number, :class => 'control-label'
    .controls
      = f.text_field :number, :class => 'text_field'
  .control-group
    = f.label :amount, :class => 'control-label'
    .controls
      = f.text_field :amount, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), admin_payments_path, :class => 'btn'
