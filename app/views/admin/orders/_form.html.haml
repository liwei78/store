= form_for @order, url: @order.new_record? ? admin_orders_path : admin_order_path(@order), :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :number, :class => 'control-label'
    .controls
      = f.text_field :number, :class => 'text_field'
  .control-group
    = f.label :amount, :class => 'control-label'
    .controls
      = f.text_field :amount, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), admin_orders_path, :class => 'btn'
