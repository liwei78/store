- model_class = Payment
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:number) + ':'
  %br
  = @payment.number
%p
  %strong= model_class.human_attribute_name(:amount) + ':'
  %br
  = @payment.amount

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), payments_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_payment_path(@payment), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), payment_path(@payment), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
