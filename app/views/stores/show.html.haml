- model_class = Store
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @store.title
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @store.description

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), stores_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_store_path(@store), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), store_path(@store), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
